# Database
DATABASE_URL=postgresql://phoenix_user:password@localhost:5432/phoenix_lab

# Redis
REDIS_URL=redis://localhost:6379/0

# ML Models - Paraphrasing (автоматический выбор по языку)
PARAPHRASE_MODEL_RU=cointegrated/rut5-base-paraphraser
PARAPHRASE_MODEL_EN=google/flan-t5-large
ML_MODEL_NAME=cointegrated/rut5-base-paraphraser  # Для обратной совместимости
ML_MODEL_CACHE_DIR=./models_cache
ML_DEVICE=cpu
ML_MAX_LENGTH=512
ML_TEMPERATURE=0.7
ML_TOP_P=0.9

# Автоматическая загрузка моделей с Hugging Face (если нет локально)
AUTO_DOWNLOAD_MODELS=true

# Предзагрузка моделей при старте сервера (false = lazy loading при первом запросе)
PRELOAD_MODELS=false

# Summary Models
SUMMARY_MODEL_RU=IlyaGusev/mbart_ru_sum_gazeta
SUMMARY_MODEL_EN=facebook/bart-large-cnn
SUMMARY_THRESHOLD_TOKENS=1800
SUMMARY_CHUNK_SIZE=900
SUMMARY_TARGET_LENGTH=600

# Similarity Model
SIMILARITY_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
SIMILARITY_THRESHOLD=0.75

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Cache
CACHE_TTL=604800
CACHE_ENABLED=true

# Security
API_KEY=your-api-key-here

# Logging
LOG_LEVEL=INFO

